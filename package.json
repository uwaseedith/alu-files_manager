{
  "name": "files_manager",
  "version": "1.0.0",
  "description": "A simple file management API built with Node.js.",
  "author": "Bezaleel Olakunori <bezaleeloci@gmail.com>",
  "license": "MIT",
  "private": true,
  "main": "server.js",
  "scripts": {
    "lint": "eslint",
    "lint-nt": "eslint.cmd",
    "check-lint": "lint controllers/ libs/ middlewares/ routes/ utils/ server.js worker.js",
    "check-lint-nt": "yarn lint-nt controllers/ libs/ middlewares/ routes/ utils/ server.js worker.js",
    "start-server": "nodemon --exec babel-node --presets @babel/preset-env ./server.js",
    "start-worker": "nodemon --exec babel-node --presets @babel/preset-env ./worker.js",
    "dev": "nodemon --exec babel-node --presets @babel/preset-env",
    "test": "mocha --opts mocha.opts tests/**/*.js",
    "test-with-coverage": "nyc --reporter=text ./node_modules/.bin/mocha --opts mocha.opts tests/**/*.js",
    "coveralls": "nyc ./node_modules/.bin/mocha --opts mocha.opts tests/**/*.js && nyc report --reporter=text-lcov | coveralls",
    "start": "node server.js"
  },
  "dependencies": {
    "bull": "^3.29.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "googleapis": "^101.0.0",
    "image-thumbnail": "^1.0.15",
    "mime-message": "^0.1.3",
    "mime-types": "^2.1.35",
    "mongodb": "^3.7.4",
    "redis": "^2.8.0",
    "sha1": "^1.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.0",
    "@babel/core": "^7.8.0",
    "@babel/node": "^7.8.0",
    "@babel/preset-env": "^7.8.2",
    "@babel/register": "^7.8.0",
    "chai": "^4.2.0",
    "chai-http": "^4.4.0",
    "coveralls": "^3.1.1",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "mocha": "^6.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.1.0",
    "request": "^2.88.0",
    "sinon": "^7.5.0",
    "supertest": "^6.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/B3zaleel/alx-files_manager.git"
  },
  "bugs": {
    "url": "https://github.com/B3zaleel/alx-files_manager/issues"
  },
  "homepage": "https://github.com/B3zaleel/alx-files_manager/blob/main/README.md",
  "engines": {
    "node": "16.x",
    "npm": "8.x",
    "yarn": "1.x"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": []
}
